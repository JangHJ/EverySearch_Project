<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".searchResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="30px"
            android:layout_height="56px"
            android:layout_margin="10pt"
            android:background="@drawable/ic_backbutton" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:inputType="text"
            android:layout_width="853px"
            android:layout_height="122px"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="10pt"
            android:layout_marginRight="10pt"
            android:layout_weight="1"
            android:background="@drawable/ic_textbox"
            android:fontFamily="@font/notosanskrregular"
            android:gravity="left|center_vertical"
            android:hint="검색어 또는 부서 입력"
            android:imeOptions="actionSearch"
            android:paddingLeft="20dp"
            android:textColor="#999999"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_resultbox"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/notosanscjkkrmedium"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="증명서"
                android:textColor="#000000"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/notosanskrregular"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="검색결과"
                android:textColor="#72727272"
                android:textSize="21dp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>